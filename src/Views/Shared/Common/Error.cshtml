@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = $"~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-2" style="font-size: 1.5rem;"></i>
                        <h2 class="mb-0 h5">Đã xảy ra lỗi - Error @Model.StatusCode</h2>
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.RequestId))
                    {
                        <div class="text-muted small mb-3">Request ID: @Model.RequestId</div>
                    }

                    <div class="text-center mb-4">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
                    </div>

                    <h3 class="text-center mb-3">Rất tiếc, đã xảy ra lỗi khi xử lý yêu cầu của bạn</h3>

                    @if (Model.IsProduction)
                    {
                        <p class="text-center mb-4">
                            Vui lòng thử lại sau hoặc liên hệ với quản trị viên hệ thống nếu lỗi vẫn tiếp tục xảy ra.
                        </p>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <h5 class="alert-heading">Thông tin chi tiết về lỗi:</h5>
                            <p>@Model.ErrorMessage</p>
                            @if (!string.IsNullOrEmpty(Model.StackTrace))
                            {
                                <hr />
                                <div class="mt-3">
                                    <h6>Stack Trace:</h6>
                                    <pre class="small bg-light p-3 rounded overflow-auto"
                                        style="max-height: 300px;">@Model.StackTrace</pre>
                                </div>
                            }
                        </div>
                    }

                    <div class="d-grid gap-2 col-6 mx-auto">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>Quay về trang chủ
                        </a>
                        <button type="button" class="btn btn-outline-secondary" onclick="window.history.back();">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại trang trước
                        </button>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">Nếu bạn cần hỗ trợ, vui lòng liên hệ với bộ phận kỹ thuật.</small>
                        <a href="mailto:support@kpidashboard.com" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-envelope me-1"></i>Báo cáo lỗi
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
