@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var currentController = ViewContext?.RouteData?.Values["Controller"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Deha KPI Management</title>
    <script type="importmap"></script>
    <link rel="icon" href="~/img/logo.png" type="image/x-icon">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css"
        rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ui-scale.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KPISolution.styles.css" asp-append-version="true" />
    <style>
        /* Xử lý vấn đề modal-backdrop đơn giản */
        .modal-backdrop {
            z-index: 1040 !important;
        }

        .modal {
            z-index: 1050 !important;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="dashboard-body">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm fixed-top">
            <div class="container-fluid px-4">
                <!-- Logo -->
                <a class="navbar-brand text-white d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <div class="bg-white rounded d-flex align-items-center justify-content-center"
                        style="height: 36px; width: auto; padding: 0 10px; margin-right: 12px;">
                        <img src="/img/logo.png" alt="Logo" style="height: 24px; width: auto;">
                    </div>
                    KPI Management
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Main Navigation -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav align-items-center ms-auto me-auto">
                        <li class="nav-item px-1">
                            <a class="nav-link rounded px-3 py-2 d-flex align-items-center @(currentController == "Home" ? "active" : "")"
                                asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-2"></i>
                                <span>Home</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown px-1">
                            <a class="nav-link rounded px-3 py-2 d-flex align-items-center @(currentController == "Dashboard" ? "active" : "")"
                                href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-speedometer2 me-2"></i>
                                <span>Dashboard</span>
                            </a>
                            <ul class="dropdown-menu shadow-sm border-0">
                                <li><a class="dropdown-item py-2" asp-controller="Dashboard"
                                        asp-action="Executive">Dashboard tổng quan</a></li>
                                <li><a class="dropdown-item py-2" asp-controller="Dashboard"
                                        asp-action="Department">Dashboard phòng ban</a></li>
                                <li><a class="dropdown-item py-2" asp-controller="Dashboard"
                                        asp-action="Personal">Dashboard cá nhân</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown px-1">
                            <a class="nav-link rounded px-3 py-2 d-flex align-items-center @(new[] { "BusinessObjective", "Objective" }.Contains(currentController) ? "active" : "")"
                                href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-bullseye me-2"></i>
                                <span>Objective</span>
                            </a>
                            <ul class="dropdown-menu shadow-sm border-0">
                                <li><a class="dropdown-item py-2" asp-controller="Objective"
                                        asp-action="Index">Objective Business</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown px-1">
                            <a class="nav-link rounded px-3 py-2 d-flex align-items-center @(currentController == "SuccessFactor" ? "active" : "")"
                                href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <span>Success Factor</span>
                            </a>
                            <ul class="dropdown-menu shadow-sm border-0">
                                <li><a class="dropdown-item py-2" asp-controller="SuccessFactor" asp-action="Index">Tất
                                        cả yếu tố thành công</a></li>
                                <li><a class="dropdown-item py-2" asp-controller="SuccessFactor"
                                        asp-action="CriticalSuccessFactors">Critical Success Factor (CSF)</a></li>
                                <li>
                                    <hr class="dropdown-divider opacity-25">
                                </li>
                                <li><a class="dropdown-item py-2" asp-controller="SuccessFactor" asp-action="Create">
                                        <i class="bi bi-plus-circle me-1"></i>Thêm yếu tố thành công</a></li>
                                <li><a class="dropdown-item py-2" asp-controller="SuccessFactor" asp-action="Create"
                                        asp-route-isCritical="true">
                                        <i class="bi bi-plus-circle me-1"></i>Thêm yếu tố cốt lõi (CSF)</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown px-1">
                            <a class="nav-link rounded px-3 py-2 d-flex align-items-center @(new[] { "KPI", "PI", "KRI", "RI", "PerformanceIndicator", "ResultIndicator" }.Contains(currentController) ? "active" : "")"
                                href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-graph-up me-2"></i>
                                <span>Indicator</span>
                            </a>
                            <ul class="dropdown-menu shadow-sm border-0 p-2" style="min-width: 280px;">
                                <!-- Performance Indicators Section -->
                                <li>
                                    <h6 class="dropdown-header text-primary fw-bold">
                                        <i class="bi bi-graph-up-arrow me-1"></i> Performance Indicators
                                    </h6>
                                </li>
                                <li class="d-flex justify-content-between px-2 mb-2">
                                    <a class="dropdown-item rounded bg-light-subtle py-2 me-1"
                                        asp-controller="PerformanceIndicator" asp-action="Index"
                                        asp-route-showOnlyKey="true">
                                        <i class="bi bi-star-fill text-success me-2"></i>KPI
                                    </a>
                                    <a class="dropdown-item rounded bg-light-subtle py-2 ms-1"
                                        asp-controller="PerformanceIndicator" asp-action="Index"
                                        asp-route-showOnlyKey="false">
                                        <i class="bi bi-bar-chart-fill text-primary me-2"></i>PI
                                    </a>
                                </li>
                                @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                                {
                                    <li class="d-flex justify-content-between px-2 mb-2">
                                        <a class="btn btn-sm btn-success w-100 me-1" asp-controller="PerformanceIndicator"
                                            asp-action="Create" asp-route-isKey="true">
                                            <i class="bi bi-plus-circle me-1"></i> Thêm KPI
                                        </a>
                                        <a class="btn btn-sm btn-primary w-100 ms-1" asp-controller="PerformanceIndicator"
                                            asp-action="Create" asp-route-isKey="false">
                                            <i class="bi bi-plus-circle me-1"></i> Thêm PI
                                        </a>
                                    </li>
                                }

                                <li>
                                    <hr class="dropdown-divider opacity-50">
                                </li>

                                <!-- Result Indicators Section -->
                                <li>
                                    <h6 class="dropdown-header text-danger fw-bold">
                                        <i class="bi bi-pie-chart-fill me-1"></i> Result Indicators
                                    </h6>
                                </li>
                                <li class="d-flex justify-content-between px-2 mb-2">
                                    <a class="dropdown-item rounded bg-light-subtle py-2 me-1"
                                        asp-controller="ResultIndicator" asp-action="Index"
                                        asp-route-showOnlyKey="true">
                                        <i class="bi bi-bullseye text-danger me-2"></i> KRI
                                    </a>
                                    <a class="dropdown-item rounded bg-light-subtle py-2 ms-1"
                                        asp-controller="ResultIndicator" asp-action="Index"
                                        asp-route-showOnlyKey="false">
                                        <i class="bi bi-pie-chart text-secondary me-2"></i> RI
                                    </a>
                                </li>
                                @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                                {
                                    <li class="d-flex justify-content-between px-2 mb-2">
                                        <a class="btn btn-sm btn-danger w-100 me-1" asp-controller="ResultIndicator"
                                            asp-action="Create" asp-route-isKey="true">
                                            <i class="bi bi-plus-circle me-1"></i> Thêm KRI
                                        </a>
                                        <a class="btn btn-sm btn-secondary w-100 ms-1" asp-controller="ResultIndicator"
                                            asp-action="Create" asp-route-isKey="false">
                                            <i class="bi bi-plus-circle me-1"></i> Thêm RI
                                        </a>
                                    </li>
                                }

                                <li>
                                    <hr class="dropdown-divider opacity-50">
                                </li>

                                <!-- Indicator Tree Section -->
                                <li>
                                    <a class="dropdown-item py-2" asp-controller="Hierarchy" asp-action="Index">
                                        <i class="bi bi-diagram-3 me-2"></i> Cây chỉ số
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown px-1">
                            <a class="nav-link rounded px-3 py-2 d-flex align-items-center @(currentController == "Measurement" ? "active" : "")"
                                href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-rulers me-2"></i>
                                <span>Đo lường</span>
                            </a>
                            <ul class="dropdown-menu shadow-sm border-0">
                                <li>
                                    <h6 class="dropdown-header text-primary fw-bold">
                                        <i class="bi bi-graph-up-arrow me-1"></i> Chỉ số hiệu suất
                                    </h6>
                                </li>
                                <li><a class="dropdown-item py-2" asp-controller="Measurement"
                                        asp-action="PerformanceIndicators">
                                        <i class="bi bi-list-check me-2"></i>Đo lường PI/KPI</a></li>
                                <li>
                                    <hr class="dropdown-divider opacity-25">
                                </li>
                                <li>
                                    <h6 class="dropdown-header text-danger fw-bold">
                                        <i class="bi bi-pie-chart-fill me-1"></i> Chỉ số kết quả
                                    </h6>
                                </li>
                                <li><a class="dropdown-item py-2" asp-controller="Measurement"
                                        asp-action="ResultIndicators">
                                        <i class="bi bi-list-check me-2"></i>Đo lường RI/KRI</a></li>
                                <li>
                                    <hr class="dropdown-divider opacity-25">
                                </li>
                                <li>
                                    <h6 class="dropdown-header text-success fw-bold">
                                        <i class="bi bi-file-earmark-text me-1"></i> Báo cáo
                                    </h6>
                                </li>
                                <li><a class="dropdown-item py-2" asp-controller="Measurement" asp-action="Report">
                                        <i class="bi bi-file-text me-2"></i>Báo cáo tổng hợp</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown px-1">
                            <a class="nav-link rounded px-3 py-2 d-flex align-items-center @(currentController == "Department" ? "active" : "")"
                                href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-building me-2"></i>
                                <span>Department</span>
                            </a>
                            <ul class="dropdown-menu shadow-sm border-0">
                                <li><a class="dropdown-item py-2" asp-controller="Department" asp-action="Index">Danh
                                        sách phòng ban</a></li>
                                <li><a class="dropdown-item py-2" asp-controller="Department" asp-action="Tree">Cơ cấu
                                        tổ chức</a></li>
                                <li>
                                    <hr class="dropdown-divider opacity-25">
                                </li>
                                <li><a class="dropdown-item py-2" asp-controller="Department" asp-action="Create">Thêm
                                        mới phòng ban</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- User Menu -->
                    <div class="navbar-nav">
                        <div class="nav-item dropdown">
                            <a class="nav-link rounded px-3 py-2 d-flex align-items-center" href="#" role="button"
                                data-bs-toggle="dropdown">
                                <i class="bi bi-gear-fill me-2"></i>
                                <span>Quản trị</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0">
                                <li><a class="dropdown-item py-2" asp-area="Identity"
                                        asp-page="/Account/Manage/Index">Tài khoản</a></li>
                                <li><a class="dropdown-item py-2" asp-controller="UserManagement"
                                        asp-action="Index">Quản lý người dùng</a></li>
                                <li>
                                    <hr class="dropdown-divider opacity-25">
                                </li>
                                <li>
                                    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                        <button type="submit" class="dropdown-item py-2 text-danger">Đăng xuất</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <style>
        .navbar {
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }

        .navbar .nav-link {
            color: rgba(255, 255, 255, 0.85) !important;
            transition: all 0.2s;
        }

        .navbar .nav-link:hover,
        .navbar .nav-link.active {
            color: #ffffff !important;
            background-color: rgba(255, 255, 255, 0.1);
        }

        @@media (max-width: 991.98px) {
            .navbar-nav {
                padding: 1rem 0;
            }

            .dropdown-menu {
                background-color: rgba(0, 89, 153, 0.8) !important;
                padding-left: 1rem !important;
                border-radius: 8px !important;
                margin-top: 0.5rem !important;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15) !important;
            }

            .dropdown-menu .dropdown-item {
                color: #ffffff !important;
                font-weight: 500 !important;
            }

            .dropdown-menu .dropdown-item:hover {
                color: #ffffff !important;
                background-color: rgba(255, 255, 255, 0.2) !important;
            }

            .dropdown-menu .dropdown-header {
                color: rgba(255, 255, 255, 0.8) !important;
                font-weight: 600 !important;
            }

            .dropdown-menu .dropdown-divider {
                border-color: rgba(255, 255, 255, 0.2) !important;
            }
        }
    </style>

    <div class="container-fluid py-3">
        <main role="main" class="container-fluid px-4 py-4">
            @await Html.PartialAsync("~/Views/Shared/Common/_Alert.cshtml")
            @await Html.PartialAsync("~/Views/Shared/Layout/_PageTemplate.cshtml")
            @await Html.PartialAsync("~/Views/Shared/Layout/_Breadcrumb.cshtml")

            @if (ViewData["ShowFilterPanel"] != null && IsSectionDefined("FilterContent"))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-transparent">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Bộ lọc</h5>
                            <button class="btn btn-link p-0" type="button" data-bs-toggle="collapse"
                                data-bs-target="#filterCollapse"
                                aria-expanded="@(ViewData["ShowFilterPanel"] != null ? "true" : "false")">
                                <i class="bi bi-funnel"></i>
                            </button>
                        </div>
                    </div>
                    <div class="collapse @(ViewData["ShowFilterPanel"] != null ? "show" : "")" id="filterCollapse">
                        <div class="card-body">
                            @await RenderSectionAsync("FilterContent", false)
                        </div>
                    </div>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="py-2 bg-light mt-auto border-top">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted">Copyright &copy; Deha KPI Management System @DateTime.Now.Year</div>
                <div>
                    <a href="#" class="text-decoration-none small">Chính sách bảo mật</a>
                    &middot;
                    <a href="#" class="text-decoration-none small">Điều khoản sử dụng</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Thêm các modal partial views -->
    <partial name="Modals/_QuickProgressUpdate" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            // Initialize all dropdowns
            var dropdownElementList = [].slice.call(document.querySelectorAll('[data-bs-toggle="dropdown"]'))
            var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
                return new bootstrap.Dropdown(dropdownToggleEl)
            });

            // Initialize Select2
            $('.form-select').select2({
                theme: 'bootstrap-5'
            });

            // UI Scale Feature
            $('#scaleToggle').on('click', function () {
                $('#scaleOptions').toggle();
            });

            $('#scaleOptions button').on('click', function () {
                const scale = $(this).data('scale');
                document.documentElement.setAttribute('data-scale', 'true');
                document.documentElement.className = document.documentElement.className.replace(/\bui-scale-\d+\b/g, '');
                document.documentElement.classList.add(`ui-scale-${scale}`);
                $('#scaleText').text(`${scale}%`);
                localStorage.setItem('ui-scale', scale);
                $('#scaleOptions').hide();
            });

            // Load saved scale
            const savedScale = localStorage.getItem('ui-scale');
            if (savedScale) {
                document.documentElement.setAttribute('data-scale', 'true');
                document.documentElement.className = document.documentElement.className.replace(/\bui-scale-\d+\b/g, '');
                document.documentElement.classList.add(`ui-scale-${savedScale}`);
                $('#scaleText').text(`${savedScale}%`);
            }

            // Sửa vị trí modal khi có navbar fixed
            $('.navbar.fixed-top').length && $('.modal').css('paddingTop', $('.navbar.fixed-top').outerHeight());
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
