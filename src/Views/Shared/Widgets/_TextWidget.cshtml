@model TextWidgetData

<div class="text-widget h-100">
    <div class="card h-100 border-0 shadow-sm">
        @if (!string.IsNullOrEmpty(Model.Title))
        {
            <div class="card-header bg-transparent">
                <h5 class="mb-0">@Model.Title</h5>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <small class="text-muted">@Model.Description</small>
                }
            </div>
        }

        <div class="card-body">
            <div class="text-content">
                @if (Model.IsHtml && !string.IsNullOrEmpty(Model.Content))
                {
                    @Html.Raw(Model.Content)
                }
                else if (!string.IsNullOrEmpty(Model.Content))
                {
                    <p class="mb-0">@Model.Content</p>
                }
                else
                {
                    <div class="text-center text-muted">
                        <i class="bi bi-file-text fs-4 mb-2"></i>
                        <p class="mb-0">Không có nội dung văn bản</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
