@model KPISolution.Models.ViewModels.KPI.KpiListViewModel
@using KPISolution.Models.Enums
@using KPISolution.Extensions
@{
    ViewData["Title"] = "Key Result Indicators";
    var filterDisplay = !string.IsNullOrEmpty(Model.Filter?.SearchTerm) || 
                        !string.IsNullOrEmpty(Model.Filter?.Department) ||
                        Model.Filter?.Status.HasValue == true ||
                        Model.Filter?.BusinessArea.HasValue == true ||
                        Model.Filter?.ImpactLevel.HasValue == true;
}

<div class="container-fluid">
    <div class="page-header mt-3 mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h2>Key Result Indicators (KRIs)</h2>
                <p class="text-muted">Strategic indicators that measure overall organizational performance.</p>
            </div>
            <div class="col-auto">
                <a asp-action="Create" asp-controller="Kri" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Add New KRI
                </a>
            </div>
        </div>
    </div>

    <!-- Search & Filter -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Search & Filter</h5>
        </div>
        <div class="card-body">
            <form id="filterForm" asp-action="Index" asp-controller="Kri" method="get">
                <input type="hidden" name="KpiType" value="@KpiType.KeyResultIndicator" />
                
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search..." 
                                   name="SearchTerm" value="@Model.Filter?.SearchTerm">
                            <button class="btn btn-outline-secondary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-8 d-flex justify-content-end">
                        <button class="btn btn-outline-primary me-2" type="button" data-bs-toggle="collapse" 
                                data-bs-target="#advancedFilter" aria-expanded="@(filterDisplay ? "true" : "false")">
                            <i class="bi bi-funnel"></i> Advanced Filters
                        </button>
                        @if (filterDisplay)
                        {
                            <a asp-action="Index" asp-controller="Kri" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Clear Filters
                            </a>
                        }
                    </div>
                </div>
                
                <div class="collapse @(filterDisplay ? "show" : "")" id="advancedFilter">
                    <div class="row mt-3">
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Department</label>
                            <select class="form-select auto-submit" name="Department">
                                <option value="">All Departments</option>
                                @foreach (var item in Model.Departments)
                                {
                                    <option value="@item.Value" 
                                            selected="@(item.Value == Model.Filter?.Department)">
                                        @item.Text
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Status</label>
                            <select class="form-select auto-submit" name="Status">
                                <option value="">All Statuses</option>
                                @foreach (KpiStatus status in Enum.GetValues(typeof(KpiStatus)))
                                {
                                    <option value="@((int)status)" 
                                            selected="@(Model.Filter?.Status == status)">
                                        @status.ToString().SplitCamelCase()
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Business Area</label>
                            <select class="form-select auto-submit" name="BusinessArea">
                                <option value="">All Areas</option>
                                @foreach (var item in Model.BusinessAreas)
                                {
                                    <option value="@item.Value" 
                                            selected="@(item.Value == Model.Filter?.BusinessArea?.ToString())">
                                        @item.Text
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Impact Level</label>
                            <select class="form-select auto-submit" name="ImpactLevel">
                                <option value="">All Impact Levels</option>
                                @foreach (var item in Model.ImpactLevels)
                                {
                                    <option value="@item.Value" 
                                            selected="@(item.Value == Model.Filter?.ImpactLevel?.ToString())">
                                        @item.Text
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Results (@Model.TotalCount found)</h5>
            <div>
                <div class="dropdown d-inline-block">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" 
                            data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-sort-alpha-down"></i> Sort By
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Index", "Kri", new { 
                                SearchTerm = Model.Filter?.SearchTerm,
                                Department = Model.Filter?.Department,
                                Status = Model.Filter?.Status,
                                BusinessArea = Model.Filter?.BusinessArea,
                                ImpactLevel = Model.Filter?.ImpactLevel,
                                KpiType = KpiType.KeyResultIndicator,
                                SortBy = "name", 
                                SortDirection = "asc" 
                            })">Name (A-Z)</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Index", "Kri", new { 
                                SearchTerm = Model.Filter?.SearchTerm,
                                Department = Model.Filter?.Department,
                                Status = Model.Filter?.Status,
                                BusinessArea = Model.Filter?.BusinessArea,
                                ImpactLevel = Model.Filter?.ImpactLevel,
                                KpiType = KpiType.KeyResultIndicator,
                                SortBy = "name", 
                                SortDirection = "desc" 
                            })">Name (Z-A)</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Index", "Kri", new { 
                                SearchTerm = Model.Filter?.SearchTerm,
                                Department = Model.Filter?.Department,
                                Status = Model.Filter?.Status,
                                BusinessArea = Model.Filter?.BusinessArea,
                                ImpactLevel = Model.Filter?.ImpactLevel,
                                KpiType = KpiType.KeyResultIndicator,
                                SortBy = "code", 
                                SortDirection = "asc" 
                            })">Code (A-Z)</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Index", "Kri", new { 
                                SearchTerm = Model.Filter?.SearchTerm,
                                Department = Model.Filter?.Department,
                                Status = Model.Filter?.Status,
                                BusinessArea = Model.Filter?.BusinessArea,
                                ImpactLevel = Model.Filter?.ImpactLevel,
                                KpiType = KpiType.KeyResultIndicator,
                                SortBy = "effectivedate", 
                                SortDirection = "desc" 
                            })">Newest First</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Index", "Kri", new { 
                                SearchTerm = Model.Filter?.SearchTerm,
                                Department = Model.Filter?.Department,
                                Status = Model.Filter?.Status,
                                BusinessArea = Model.Filter?.BusinessArea,
                                ImpactLevel = Model.Filter?.ImpactLevel,
                                KpiType = KpiType.KeyResultIndicator,
                                SortBy = "effectivedate", 
                                SortDirection = "asc" 
                            })">Oldest First</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.KpiItems.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Current Value</th>
                                <th>Target Value</th>
                                <th>Department</th>
                                <th>Activity Type</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.KpiItems)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-controller="Kri" asp-route-id="@item.Id" 
                                           class="fw-medium text-truncate">@item.Code</a>
                                    </td>
                                    <td class="text-truncate" style="max-width: 200px;">@item.Name</td>
                                    <td>
                                        @if (item.CurrentValue.HasValue)
                                        {
                                            <span>@item.CurrentValue.Value.ToString("N2") @item.MeasurementUnit</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not measured</span>
                                        }
                                    </td>
                                    <td>@item.TargetValue.ToString("N2") @item.MeasurementUnit</td>
                                    <td>@item.Department</td>
                                    <td>@item.ActivityTypeName</td>
                                    <td>
                                        @{
                                            var statusClass = item.Status switch
                                            {
                                                KpiStatus.Active => "bg-success",
                                                KpiStatus.OnTarget => "bg-success", 
                                                KpiStatus.AtRisk => "bg-warning text-dark",
                                                KpiStatus.BelowTarget => "bg-danger",
                                                KpiStatus.Draft => "bg-secondary",
                                                KpiStatus.UnderReview => "bg-info text-dark",
                                                KpiStatus.Deprecated => "bg-warning text-dark",
                                                KpiStatus.Archived => "bg-dark",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">@item.StatusString</span>
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                                                    type="button" data-bs-toggle="dropdown">
                                                Actions
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" asp-action="Details" asp-controller="Kri" 
                                                       asp-route-id="@item.Id">
                                                        <i class="bi bi-eye"></i> View Details
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" asp-action="Edit" asp-controller="Kri" 
                                                       asp-route-id="@item.Id">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" asp-action="Delete" asp-controller="Kri" 
                                                       asp-route-id="@item.Id">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5">
                    <i class="bi bi-search fs-1 text-muted"></i>
                    <p class="mt-3">No Key Result Indicators found matching your criteria.</p>
                    <a asp-action="Create" asp-controller="Kri" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-lg"></i> Add New KRI
                    </a>
                </div>
            }
        </div>
        <div class="card-footer d-flex justify-content-between">
            <div>
                Showing @((Model.CurrentPage - 1) * Model.PageSize + (Model.KpiItems.Any() ? 1 : 0)) - 
                @((Model.CurrentPage - 1) * Model.PageSize + Model.KpiItems.Count) of @Model.TotalCount
            </div>
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination mb-0">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", "Kri", new {
                                    SearchTerm = Model.Filter?.SearchTerm,
                                    Department = Model.Filter?.Department,
                                    Status = Model.Filter?.Status,
                                    BusinessArea = Model.Filter?.BusinessArea,
                                    ImpactLevel = Model.Filter?.ImpactLevel,
                                    KpiType = KpiType.KeyResultIndicator,
                                    SortBy = Model.Filter?.SortBy,
                                    SortDirection = Model.Filter?.SortDirection,
                                    page = i
                                })">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-submit the form when select values change
            $('.auto-submit').change(function () {
                $('#filterForm').submit();
            });
        });
    </script>
} 