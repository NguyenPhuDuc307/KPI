@model KPISolution.Models.ViewModels.KPI.AddKpiMeasurementViewModel
@using KPISolution.Models.Enums
@using KPISolution.Extensions
@{
    ViewData["Title"] = "Add Measurement";
}

<div class="container-fluid">
    <div class="page-header mt-3 mb-4">
        <div class="row align-items-center">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-1">
                        <li class="breadcrumb-item"><a asp-controller="Kri" asp-action="Index">KRIs</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Kri" asp-action="Details" asp-route-id="@Model.KpiId">@Model.KpiCode</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Add Measurement</li>
                    </ol>
                </nav>
                <h2>Add Measurement for @Model.KpiName</h2>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-8">
            <form asp-controller="Kri" asp-action="AddMeasurement" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="KpiId" />
                <input type="hidden" asp-for="KpiName" />
                <input type="hidden" asp-for="KpiCode" />
                <input type="hidden" asp-for="Unit" />
                <input type="hidden" asp-for="TargetValue" />
                
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">KRI Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>KRI Code</label>
                                    <div class="form-control-plaintext">@Model.KpiCode</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>KRI Name</label>
                                    <div class="form-control-plaintext">@Model.KpiName</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Target Value</label>
                                    <div class="form-control-plaintext">@Model.TargetValue @Model.Unit</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Measurement Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Value" class="form-control" placeholder="Actual Value">
                                    <label asp-for="Value">Actual Value (@Model.Unit)</label>
                                    <span asp-validation-for="Value" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="MeasurementDate" class="form-control" type="date">
                                    <label asp-for="MeasurementDate">Measurement Date</label>
                                    <span asp-validation-for="MeasurementDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Period" class="form-control" placeholder="Period">
                                    <label asp-for="Period">Period (e.g. Mar 2025)</label>
                                    <span asp-validation-for="Period" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="Status" class="form-select">
                                        @foreach (MeasurementStatus status in Enum.GetValues(typeof(MeasurementStatus)))
                                        {
                                                    <option value="@status">@status.ToString().SplitCamelCase()</option>
                                        }
                                    </select>
                                    <label asp-for="Status">Status</label>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Notes" class="form-control" placeholder="Notes" style="height: 100px"></textarea>
                                    <label asp-for="Notes">Notes</label>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between">
                    <a asp-controller="Kri" asp-action="Details" asp-route-id="@Model.KpiId" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to KRI
                    </a>
                    <div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save Measurement
                        </button>
                    </div>
                </div>
            </form>
        </div>
        
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">About KRI Measurements</h5>
                </div>
                <div class="card-body">
                    <p>Adding regular measurements helps track the KRI over time.</p>
                    <ul>
                        <li><strong>Actual Value:</strong> The current measured value for this KRI.</li>
                        <li><strong>Measurement Date:</strong> When the measurement was taken.</li>
                        <li><strong>Period:</strong> The reporting period this measurement represents.</li>
                        <li><strong>Status:</strong> The verification status of this measurement.</li>
                        <li><strong>Notes:</strong> Additional information about this measurement.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
            <partial name="_ValidationScriptsPartial" />
}