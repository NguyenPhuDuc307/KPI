@model KPISolution.Models.ViewModels.KPI.KpiSeparatedViewModel
@using KPISolution.Models.Enums
@{
    ViewData["Title"] = "Phân loại chỉ số KPI";
    ViewData["Icon"] = "bi-grid-3x3-gap";
    ViewData["Subtitle"] = "Quản lý phân loại các chỉ số hiệu suất trong hệ thống";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-primary"><i class="bi bi-graph-up-arrow me-2"></i>Chỉ số hiệu suất chính (KPI)
                    </h5>
                    <div>
                        <a asp-controller="KPI" asp-action="Index" class="btn btn-sm btn-primary">
                            <i class="bi bi-list me-1"></i>Xem tất cả KPI
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body p-3">
                @if (Model.KeyPerformanceIndicators.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="kpiTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã</th>
                                    <th>Tên chỉ số</th>
                                    <th>Phòng ban</th>
                                    <th>Đơn vị</th>
                                    <th>Mục tiêu</th>
                                    <th>Trạng thái</th>
                                    <th style="width: 100px">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.KeyPerformanceIndicators)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">@item.Code</span>
                                        </td>
                                        <td>
                                            <a asp-controller="Kpi" asp-action="Details" asp-route-id="@item.Id"
                                                class="text-decoration-none fw-medium">
                                                @item.Name
                                            </a>
                                        </td>
                                        <td>@item.Department</td>
                                        <td>@item.Unit</td>
                                        <td>@item.TargetValue</td>
                                        <td>
                                            <span class="badge @item.StatusCssClass">@item.Status</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-controller="Kpi" asp-action="Details" asp-route-id="@item.Id"
                                                    class="btn btn-sm btn-info text-white" title="Chi tiết">
                                                    <i class="bi bi-info-circle"></i>
                                                </a>
                                                <a asp-controller="Measurement" asp-action="Create" asp-route-kpiId="@item.Id"
                                                    class="btn btn-sm btn-success" title="Đo lường">
                                                    <i class="bi bi-plus-circle"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-bar-chart text-muted" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Không tìm thấy chỉ số hiệu suất chính nào</h5>
                        <p class="text-muted">Hãy tạo KPI mới hoặc đánh dấu PI hiện có là KPI.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

