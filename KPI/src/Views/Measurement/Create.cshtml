@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MeasurementCreateViewModel

@{
    ViewData["Title"] = "Ghi nhận Kết quả Đo lường";
    ViewData["Icon"] = "bi-check2-circle";
    ViewData["Subtitle"] = "Ghi nhận giá trị đo lường mới cho chỉ số";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="@ViewData["Icon"] me-2"></i>@ViewData["Title"]</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="IndicatorId" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show"
                        role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label fw-medium">Mã Chỉ số</label>
                        <div class="col-sm-9">
                            <input type="text" readonly class="form-control-plaintext fw-bold text-primary"
                                asp-for="IndicatorCode">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-3 col-form-label fw-medium">Tên Chỉ số</label>
                        <div class="col-sm-9">
                            <input type="text" readonly class="form-control-plaintext" asp-for="IndicatorName">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="MeasurementDate" class="form-label fw-medium"></label>
                            <input asp-for="MeasurementDate" class="form-control" type="date" />
                            <span asp-validation-for="MeasurementDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ActualValue" class="form-label fw-medium"></label>
                            <div class="input-group">
                                <input asp-for="ActualValue" class="form-control" type="number" step="any" />
                                <span class="input-group-text">@Model.Unit</span>
                            </div>
                            <span asp-validation-for="ActualValue" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label fw-medium"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-end">
                        <a href="@Model.CancelUrl" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-x-circle me-1"></i>Hủy bỏ
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i>Lưu Kết quả Đo lường
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Thiết lập giá trị mặc định cho ngày đo lường là ngày hiện tại
            const today = new Date().toISOString().split('T')[0];
            // Sử dụng đúng ID 'MeasurementDate'
            if (!$('#MeasurementDate').val()) {
                $('#MeasurementDate').val(today);
            }
        });
    </script>
}
