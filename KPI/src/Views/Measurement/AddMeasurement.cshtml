@model KPISolution.Models.ViewModels.KPI.AddKpiMeasurementViewModel

@{
    ViewData["Title"] = "Thêm giá trị đo lường";
    ViewData["Icon"] = "bi-plus-circle";
    ViewData["Subtitle"] = "Thêm giá trị đo lường mới cho KPI";
    ViewData["ShowFilterPanel"] = false;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">Thêm giá trị đo lường cho KPI-001: Tỷ lệ đơn hàng đúng hạn</h5>
            </div>
            <div class="card-body">
                <form asp-action="AddMeasurement" method="post">
                    <input type="hidden" asp-for="KpiId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MeasurementDate" class="form-label">Ngày đo lường</label>
                                <input asp-for="MeasurementDate" class="form-control" type="date" />
                                <span asp-validation-for="MeasurementDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PeriodType" class="form-label">Kỳ đo lường</label>
                                <select asp-for="PeriodType" class="form-select">
                                    <option value="0">Hàng ngày</option>
                                    <option value="1">Hàng tuần</option>
                                    <option value="2">Hàng tháng</option>
                                    <option value="3">Hàng quý</option>
                                    <option value="4">Hàng năm</option>
                                </select>
                                <span asp-validation-for="PeriodType" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Value" class="form-label">Giá trị đo lường</label>
                                <div class="input-group">
                                    <input asp-for="Value" class="form-control" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="Value" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Status" class="form-label">Trạng thái</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="0">Đạt mục tiêu</option>
                                    <option value="1">Cần cải thiện</option>
                                    <option value="2">Không đạt</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Notes" class="form-label">Ghi chú</label>
                                <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Nhập ghi chú, giải thích về kết quả đo lường..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DataSource" class="form-label">Nguồn dữ liệu</label>
                                <input asp-for="DataSource" class="form-control" placeholder="Nhập nguồn dữ liệu" />
                                <span asp-validation-for="DataSource" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Tệp đính kèm</label>
                                <input type="file" class="form-control" />
                                <div class="form-text">Tệp hỗ trợ: PDF, Excel, Word (tối đa 5MB)</div>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col">
                            <h6>Thông tin tham khảo</h6>
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <div class="small text-muted">Giá trị mục tiêu</div>
                                    <div class="fw-bold">95%</div>
                                </div>
                                <div class="col-md-4">
                                    <div class="small text-muted">Giá trị kỳ trước</div>
                                    <div class="fw-bold">90%</div>
                                </div>
                                <div class="col-md-4">
                                    <div class="small text-muted">Ngưỡng cảnh báo</div>
                                    <div class="fw-bold">< 90%</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end mt-4">
                        <a asp-action="KpiMeasurement" asp-route-id="1" class="btn btn-outline-secondary me-2">Hủy</a>
                        <button type="submit" class="btn btn-primary">Lưu giá trị đo lường</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}