@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Deha KPI Management</title>
    <script type="importmap"></script>
    <link rel="icon" href="~/img/logo.png" type="image/x-icon">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    <!-- Select2 -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css"
        rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KPISolution.styles.css" asp-append-version="true" />
</head>

<body class="dashboard-body">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-deha">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="bg-white rounded d-flex align-items-center justify-content-center p-1 me-2">
                        <img src="~/img/logo.png" alt="Deha Logo" height="28" class="d-inline-block">
                    </div>
                    <span>KPI Management</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item px-1">
                                <a class="nav-link d-flex flex-column align-items-center @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                                    asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door mb-1"></i>
                                    <span>Trang chủ</span>
                                </a>
                            </li>
                            <li class="nav-item px-1">
                                <a class="nav-link d-flex flex-column align-items-center @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")"
                                    asp-area="" asp-controller="Dashboard" asp-action="Executive">
                                    <i class="bi bi-speedometer2 mb-1"></i>
                                    <span>Dashboard</span>
                                </a>
                            </li>
                            <li class="nav-item dropdown px-1">
                                <a class="nav-link dropdown-toggle d-flex flex-column align-items-center @(new[] { "KRI", "RI", "PI", "KPI" }.Contains(ViewContext.RouteData.Values["Controller"]?.ToString()) ? "active" : "")"
                                    href="#" id="kpiDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-bar-chart-line mb-1"></i>
                                    <span>KPIs</span>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="kpiDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="KRI" asp-action="Index">
                                            <i class="bi bi-graph-up me-1"></i> Key Result Indicators (KRIs)
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="RI" asp-action="Index">
                                            <i class="bi bi-pie-chart me-1"></i> Result Indicators (RIs)
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="PI" asp-action="Index">
                                            <i class="bi bi-bar-chart me-1"></i> Performance Indicators (PIs)
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="KPI" asp-action="Measurement">
                                            <i class="bi bi-rulers me-1"></i> Measurements
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item px-1">
                                <a class="nav-link d-flex flex-column align-items-center @(ViewContext.RouteData.Values["Controller"]?.ToString() == "CSF" ? "active" : "")"
                                    asp-area="" asp-controller="CSF" asp-action="Index">
                                    <i class="bi bi-check2-square mb-1"></i>
                                    <span>CSFs</span>
                                </a>
                            </li>
                            <li class="nav-item px-1">
                                <a class="nav-link d-flex flex-column align-items-center @(ViewContext.RouteData.Values["Controller"]?.ToString() == "BusinessObjective" ? "active" : "")"
                                    asp-area="" asp-controller="BusinessObjective" asp-action="Index">
                                    <i class="bi bi-bullseye mb-1"></i>
                                    <span>Mục tiêu</span>
                                </a>
                            </li>
                            <li class="nav-item px-1">
                                <a class="nav-link d-flex flex-column align-items-center @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Department" ? "active" : "")"
                                    asp-area="" asp-controller="Department" asp-action="Index">
                                    <i class="bi bi-building mb-1"></i>
                                    <span>Phòng ban</span>
                                </a>
                            </li>
                            @if (User.IsInRole("Administrator"))
                            {
                                <li class="nav-item dropdown px-1">
                                    <a class="nav-link dropdown-toggle d-flex flex-column align-items-center @(new[] { "UserManagement", "RoleManagement" }.Contains(ViewContext.RouteData.Values["Controller"]?.ToString()) ? "active" : "")"
                                        href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                        <i class="bi bi-gear mb-1"></i>
                                        <span>Quản trị</span>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="UserManagement" asp-action="Index">
                                                <i class="bi bi-people me-1"></i> Quản lý người dùng
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="RoleManagement" asp-action="Index">
                                                <i class="bi bi-person-badge me-1"></i> Quản lý vai trò
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    }
                    <div class="ms-auto">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @if (ViewData["UsePageTemplate"] != null && (bool)ViewData["UsePageTemplate"] == true)
    {
        <partial name="_Alert" />
        <partial name="_Breadcrumb" />
        <partial name="_PageTemplate" />
    }
    else
    {
        <div class="container-fluid py-3">
            <main role="main" class="pb-3">
                <partial name="_Alert" />
                <partial name="_Breadcrumb" />
                @RenderBody()
            </main>
        </div>
    }

    <footer class="border-top footer text-white">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>&copy; 2023 - Deha Vietnam</div>
                <div>KPI Management System</div>
            </div>
        </div>
    </footer>

    <!-- Thêm các modal partial views -->
    <partial name="_QuickProgressUpdate" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            // Auto-initialize Select2 for all select elements with the select2 class
            $('.select2').select2({
                theme: 'bootstrap-5'
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("FilterContent", required: false)
</body>

</html>
