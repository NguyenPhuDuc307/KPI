@model KPISolution.Models.ViewModels.Dashboard.Widgets.WidgetData

<div class="empty-widget h-100">
    <div class="card h-100 border-0 shadow-sm border-dashed">
        <div class="card-body d-flex flex-column justify-content-center align-items-center p-4">
            <div class="text-center">
                <div class="display-1 text-muted mb-3">
                    <i class="bi bi-gear"></i>
                </div>
                <h5 class="mb-2">@(string.IsNullOrEmpty(Model.Title) ? "Widget chưa được cấu hình" : Model.Title)</h5>
                <p class="text-muted mb-3">@(string.IsNullOrEmpty(Model.Description) ? "Vui lòng cấu hình widget này" :
                                        Model.Description)</p>
                <button type="button" class="btn btn-sm btn-primary configure-widget" data-widget-id="@Model.WidgetId">
                    <i class="bi bi-gear-fill me-1"></i>Cấu hình
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .border-dashed {
        border: 2px dashed #dee2e6 !important;
    }
</style>