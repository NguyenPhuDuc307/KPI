@model KPISolution.Models.ViewModels.SuccessFactor.SuccessFactorDetailsViewModel

@{
    ViewData["Title"] = "Chuyển đổi thành CSF";
}

<div class="container-fluid px-4">
    <h1 class="mt-4"><i class="bi bi-arrow-up-circle me-2"></i>Chuyển đổi thành CSF</h1>
    <div class="mb-4">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Quay lại
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Xác nhận chuyển đổi yếu tố thành công thành CSF</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>Thao tác này sẽ tạo một <strong>CSF
                    (CSF)</strong> mới dựa trên SF hiện tại và đánh dấu SF này là CSF.
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên:</label>
                        <div>@Model.Name</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Mã:</label>
                        <div>@Model.Code (sẽ được chuyển thành CSF-@Model.Code)</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Trạng thái:</label>
                        <div>@Model.Status</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Đơn vị:</label>
                        <div>@(Model.DepartmentName ?? "Không xác định")</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Mục tiêu:</label>
                        <div>@(Model.BusinessObjectiveName ?? "Không xác định")</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tiến độ:</label>
                        <div>@Model.ProgressPercentage%</div>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Mô tả:</label>
                <div>@Model.Description</div>
            </div>

            <form asp-action="PromoteToCsf" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-2">Hủy</a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-arrow-up-circle me-1"></i>Xác nhận chuyển đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>