@model KPISolution.Models.ViewModels.Department.DepartmentViewModel

@{
    ViewData["Title"] = "Xóa phòng ban";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mt-4 mb-0"><i class="bi bi-trash me-2"></i>Xóa phòng ban</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Department" asp-action="Index">Quản lý phòng ban</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Xóa</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-danger text-white">
            <i class="bi bi-exclamation-triangle me-1"></i>
            Xác nhận xóa phòng ban
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <div class="d-flex">
                    <div class="me-3">
                        <i class="bi bi-exclamation-triangle-fill fs-2"></i>
                    </div>
                    <div>
                        <h5 class="alert-heading">Cảnh báo!</h5>
                        <p>Bạn có chắc chắn muốn xóa phòng ban này? Hành động này không thể hoàn tác.</p>
                        @if (Model.EmployeeCount > 0 || Model.KpiCount > 0)
                        {
                                <hr>
                                <p class="mb-0">
                                    <strong>Thông tin liên quan:</strong><br />
                                    @if (Model.EmployeeCount > 0)
                                    {
                                            <span class="text-danger">- Có @Model.EmployeeCount nhân viên thuộc phòng ban này.</span>
                                
                                            <br />
                                    }
                                    @if (Model.KpiCount > 0)
                                    {
                                            <span class="text-danger">- Có @Model.KpiCount KPI thuộc phòng ban này.</span>
                                    }
                                </p>
                        }
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <h5>Thông tin phòng ban:</h5>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 200px">Mã phòng ban</th>
                            <td><span class="badge bg-secondary">@Model.Code</span></td>
                        </tr>
                        <tr>
                            <th>Tên phòng ban</th>
                            <td><strong>@Model.Name</strong></td>
                        </tr>
                        <tr>
                            <th>Phòng ban cha</th>
                            <td>@(string.IsNullOrEmpty(Model.ParentDepartmentName) ? "Không có" : Model.ParentDepartmentName)</td>
                        </tr>
                        <tr>
                            <th>Quản lý</th>
                            <td>@(string.IsNullOrEmpty(Model.ManagerName) ? "Chưa phân công" : Model.ManagerName)</td>
                        </tr>
                        <tr>
                            <th>Trạng thái</th>
                            <td>
                                @if (Model.Status == "Active")
                                {
                                        <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                        <span class="badge bg-danger">Không hoạt động</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Số lượng nhân viên</th>
                            <td><span class="badge bg-info text-dark">@Model.EmployeeCount</span></td>
                        </tr>
                        <tr>
                            <th>Số lượng KPI</th>
                            <td><span class="badge bg-primary">@Model.KpiCount</span></td>
                        </tr>
                    </table>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash me-1"></i> Xóa phòng ban
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i> Hủy bỏ
                    </a>
                </div>
            </form>
        </div>
    </div>
</div> 